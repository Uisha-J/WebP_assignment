            // simple-keyboard ì´ˆê¸°í™” ì½”ë“œ
            const Keyboard = window.SimpleKeyboard.default;
            
            const keyboard = new Keyboard({
              onChange: input => onChange(input),
              onKeyPress: button => onKeyPress(button),
              layout: {
                default: [
                  "1 2 3 4 5 6 7 8 9 0 {bksp}",
                  "ã…‚ ã…ˆ ã„· ã„± ã…… ã…› ã…• ã…‘ ã… ã…”",
                  "ã… ã„´ ã…‡ ã„¹ ã… ã…— ã…“ ã… ã…£",
                  "ã…‹ ã…Œ ã…Š ã… ã…  ã…œ ã…¡ {shift}",
                  "{lang} {space} {enter}"
                ],
                shift: [
                  "! @ # $ % ^ & * ( ) {bksp}",
                  "ã…ƒ ã…‰ ã„¸ ã„² ã…† ã…› ã…• ã…‘ ã…’ ã…–",
                  "ã… ã„´ ã…‡ ã„¹ ã… ã…— ã…“ ã… ã…£",
                  "ã…‹ ã…Œ ã…Š ã… ã…  ã…œ ã…¡ {shift}",
                  "{lang} {space} {enter}"
                ],
                en: [
                  "1 2 3 4 5 6 7 8 9 0 {bksp}",
                  "q w e r t y u i o p",
                  "a s d f g h j k l",
                  "z x c v b n m {shift}",
                  "{lang} {space} {enter}"
                ],
                enShift: [
                  "! @ # $ % ^ & * ( ) {bksp}",
                  "Q W E R T Y U I O P",
                  "A S D F G H J K L",
                  "Z X C V B N M {shift}",
                  "{lang} {space} {enter}"
                ]
              },
              display: {
                "{bksp}": "âŒ«",
                "{enter}": "â",
                "{shift}": "â‡§",
                "{space}": "âµ",
                "{lang}": "í•œ/ì˜"
              }
            });
            
            let isKorean = true;
            let isShift = false;
            
            function onChange(input) {
              document.getElementById("virtual-input").value = input;
            }
            
            function onKeyPress(button) {
              if (button === "{shift}") {
                isShift = !isShift;
                if (isKorean) {
                  keyboard.setOptions({ layoutName: isShift ? "shift" : "default" });
                } else {
                  keyboard.setOptions({ layoutName: isShift ? "enShift" : "en" });
                }
              }
              if (button === "{lang}") {
                isKorean = !isKorean;
                keyboard.setOptions({ layoutName: isKorean ? (isShift ? "shift" : "default") : (isShift ? "enShift" : "en") });
              }
            }

            <!-- íˆ´ë°” ì•„ë˜ì— ì…ë ¥ì°½ê³¼ í‚¤ë³´ë“œ ì»¨í…Œì´ë„ˆ ì¶”ê°€ -->
            <input id="virtual-input" class="input" readonly style="width:300px;font-size:1.2rem; margin-top:10px; display:none;" />
            <div id="keyboard" style="display:none;"></div>
                    </div>

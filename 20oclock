    <script>
                // í™˜ê²½ë³„ ì„¤ì • ë¶„ë¦¬ - ì´ ìœ„ì¹˜ê°€ ìµœì !
        const CONFIG = {
            development: {
                wsProtocol: 'ws:',
                apiBaseUrl: 'http://localhost:3000',
                vncHost: 'localhost'
            },
            production: {
                wsProtocol: 'wss:',
                apiBaseUrl: 'https://your-domain.com',
                vncHost: 'your-vnc-server.com'
            }
        };

        const currentConfig = CONFIG[window.ENV?.NODE_ENV || 'development'];

        function showKeyboard() {
            alert('ê°€ìƒí‚¤ë³´ë“œ ê¸°ëŠ¥ì€ êµ¬í˜„ ì˜ˆì •ì…ë‹ˆë‹¤.');
        }
        function addChar(c) {
          const input = document.getElementById('virtual-input');
          input.value += c;
        }
        function removeChar() {
          const input = document.getElementById('virtual-input');
          input.value = input.value.slice(0, -1);
        }
        function showKeyboard() {
          document.getElementById('virtual-keyboard').style.display = 'block';
        }
        class SandboxPlatform {
            constructor() {
                this.currentVM = null;
                this.vncWebSocket = null;
                this.isConnected = false;
                this.isConnecting = false;
                this.performanceInterval = null;
                this.config = currentConfig; // ì¶”ê°€ í•„ìš”
                this.authToken = localStorage.getItem('authToken'); // ì¶”ê°€ í•„ìš”
                
                this.vmConfigs = {
                    'ubuntu-desktop': {
                        name: 'Ubuntu Desktop 20.04',
                        memory: '4GB',
                        cpu: '2 cores',
                        disk: '25GB',
                        host: 'localhost', // VNC ì„œë²„ í˜¸ìŠ¤íŠ¸
                        port: 6080,       // Websockify í¬íŠ¸
                        vncPort: 5901,    // ì‹¤ì œ VNC í¬íŠ¸
                        password: '',      // VNC íŒ¨ìŠ¤ì›Œë“œ
                        path: '/websockify' // WebSocket ê²½ë¡œ
                    },
                };

                this.initEventListeners();
                this.updatePerformanceStats();
            }

            initEventListeners() {
                // VM ì„ íƒ ì´ë²¤íŠ¸
                document.querySelectorAll('.vm-item').forEach(item => {
                    item.addEventListener('click', (e) => {
                        this.selectVM(e.target.dataset.vm);
                    });
                });

                // ì»¨íŠ¸ë¡¤ ë²„íŠ¼ ì´ë²¤íŠ¸
                document.getElementById('start-btn').addEventListener('click', () => {
                    this.startVM();
                });

                document.getElementById('stop-btn').addEventListener('click', () => {
                    this.stopVM();
                });

                document.getElementById('restart-btn').addEventListener('click', () => {
                    this.restartVM();
                });

                // ì°½ í¬ê¸° ë³€ê²½ ì´ë²¤íŠ¸
                window.addEventListener('resize', () => {
                    this.resizeVNCViewer();
                });
            }

            selectVM(vmId) {
                // ì´ì „ ì„ íƒ í•´ì œ
                document.querySelectorAll('.vm-item').forEach(item => {
                    item.classList.remove('active');
                });

                // ìƒˆë¡œìš´ VM ì„ íƒ
                document.querySelector(`[data-vm="${vmId}"]`).classList.add('active');
                this.currentVM = vmId;

                // VM ì •ë³´ ì—…ë°ì´íŠ¸
                this.updateVMInfo(vmId);
                
                // ë·°ì–´ ì œëª© ì—…ë°ì´íŠ¸
                document.getElementById('viewer-title').textContent = this.vmConfigs[vmId].name;

                // ì—°ê²°ì´ ìˆë‹¤ë©´ ëŠê¸°
                if (this.isConnected) {
                    this.disconnect();
                }
            }

            updateVMInfo(vmId) {
                const config = this.vmConfigs[vmId];
                const vmInfo = document.getElementById('vm-info');
                
                document.getElementById('vm-memory').textContent = config.memory;
                document.getElementById('vm-cpu').textContent = config.cpu;
                document.getElementById('vm-disk').textContent = config.disk;
                
                vmInfo.style.display = 'block';
            }

            async startVMBackend(vmId) {
                try {
                    const response = await fetch(`/api/vm/${vmId}/start`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${this.getAuthToken()}`
                        }
                    });

                    if (!response.ok) {
                        throw new Error(`VM ì‹œì‘ ì‹¤íŒ¨: ${response.statusText}`);
                    }

                    const result = await response.json();
                    return result;
                } catch (error) {
                    console.error('Backend VM ì‹œì‘ ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            async startVM() {
                if (!this.currentVM) {
                    alert('ë¨¼ì € ê°€ìƒí™˜ê²½ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
                    return;
                }

                try {
                    this.setConnectionStatus('connecting', 'ì—°ê²° ì¤‘...');
                    
                    // ì‹¤ì œ VM ì‹œì‘ API í˜¸ì¶œ
                    await this.startVMBackend(this.currentVM);
                    
                    // VNC ì—°ê²° ëŒ€ê¸° ì‹œê°„
                    await new Promise(resolve => setTimeout(resolve, 5000));
                    
                    // VNC ì—°ê²° ì‹œë„
                    await this.connectVNC();
                    
                } catch (error) {
                    console.error('VM ì‹œì‘ ì‹¤íŒ¨:', error);
                    this.setConnectionStatus('disconnected', 'ì—°ê²° ì‹¤íŒ¨');
                    alert('ê°€ìƒí™˜ê²½ ì‹œì‘ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤: ' + error.message);
                }
            }

            async simulateVMStart() {
                // VM ì‹œì‘ ì‹œë®¬ë ˆì´ì…˜ (ì‹¤ì œë¡œëŠ” ë°±ì—”ë“œ API í˜¸ì¶œ)
                return new Promise((resolve) => {
                    setTimeout(() => {
                        resolve();
                    }, 3000);
                });
            }

            async connectVNC() {
                const config = this.vmConfigs[this.currentVM];
                const canvas = document.getElementById('vnc-canvas');
                
                try {
                    // WebSocket URL êµ¬ì„±
                    const wsProtocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
                    const wsUrl = `${wsProtocol}//${config.host || 'localhost'}:${config.port}/websockify`;

                    // noVNC RFB ê°ì²´ ìƒì„±
                    this.rfb = new RFB(canvas, wsUrl, {
                        credentials: {
                            password: config.password || ''
                        }
                    });
                    
                    // ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡ (ì£¼ì„ í•´ì œ ë° ìˆ˜ì •)
                    this.rfb.addEventListener('connect', this.onVNCConnect.bind(this));
                    this.rfb.addEventListener('disconnect', this.onVNCDisconnect.bind(this));
                    this.rfb.addEventListener('credentialsrequired', this.onVNCCredentials.bind(this));
                    this.rfb.addEventListener('securityfailure', this.onVNCSecurityFailure.bind(this));
                    
                    // ì—°ê²° ì„¤ì •
                    this.rfb.scaleViewport = true;
                    this.rfb.resizeSession = true;
                    
                } catch (error) {
                    console.error('VNC ì—°ê²° ì‹¤íŒ¨:', error);
                    this.setConnectionStatus('disconnected', 'ì—°ê²° ì‹¤íŒ¨');
                    throw error;
                }
            }

            async callAPI(endpoint, method = 'GET', data = null) {
                const url = `${this.config.apiBaseUrl}${endpoint}`;
                const options = {
                    method,
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': this.authToken ? `Bearer ${this.authToken}` : ''
                    }
                };

                if (data) {
                    options.body = JSON.stringify(data);
                }

                try {
                    const response = await fetch(url, options);
                    if (!response.ok) {
                        throw new Error(`API í˜¸ì¶œ ì‹¤íŒ¨: ${response.statusText}`);
                    }
                    return response.json();
                } catch (error) {
                    console.error('API í˜¸ì¶œ ì˜¤ë¥˜:', error);
                    throw error;
                }
            }

            getAuthToken() {
                return this.authToken || localStorage.getItem('authToken');
            }

            // VNC ì´ë²¤íŠ¸ í•¸ë“¤ëŸ¬ë“¤
            onVNCConnect() {
                console.log('VNC ì—°ê²° ì„±ê³µ');
                this.isConnected = true;
                this.isConnecting = false;
                this.setConnectionStatus('connected', 'ì—°ê²°ë¨');
                this.updateVMStatus('ì‹¤í–‰ ì¤‘');
                this.showVNCViewer();
                this.startPerformanceMonitoring();
            }

            onVNCDisconnect(e) {
                console.log('VNC ì—°ê²° í•´ì œ:', e.detail);
                this.isConnected = false;
                this.isConnecting = false;
                this.setConnectionStatus('disconnected', 'ì—°ê²° ì•ˆë¨');
                this.updateVMStatus('ì¤‘ì§€ë¨');
                this.hideVNCViewer();
                this.stopPerformanceMonitoring();
            }

            onVNCCredentials() {
                const password = prompt('VNC íŒ¨ìŠ¤ì›Œë“œë¥¼ ì…ë ¥í•˜ì„¸ìš”:');
                if (password) {
                    this.rfb.sendCredentials({ password: password });
                }
            }

            onVNCSecurityFailure(e) {
                console.error('VNC ë³´ì•ˆ ì‹¤íŒ¨:', e.detail);
                alert('VNC ì¸ì¦ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
            }

            async simulateVNCConnection() {
                return new Promise((resolve) => {
                    setTimeout(() => {
                        this.isConnected = true;
                        this.isConnecting = false;
                        resolve();
                    }, 2000);
                });
            }

            showVNCViewer() {
                const noConnection = document.getElementById('no-connection');
                const toolbar = document.getElementById('toolbar');
                const canvas = document.getElementById('vnc-canvas');

                noConnection.style.display = 'none';
                toolbar.style.display = 'flex';
                canvas.style.display = 'block';
                
                // ì‹¤ì œ VNC í™”ë©´ ì‹œë®¬ë ˆì´ì…˜
                container.innerHTML = `
                    <div style="width: 100%; height: 100%; background: linear-gradient(45deg, #1e3c72, #2a5298); 
                                display: flex; align-items: center; justify-content: center; 
                                border-radius: 10px; color: white; font-size: 1.2rem;">
                        <div style="text-align: center;">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">ğŸ–¥ï¸</div>
                            <div>${this.vmConfigs[this.currentVM].name}</div>
                            <div style="font-size: 0.9rem; margin-top: 0.5rem; opacity: 0.8;">
                                VNC ì—°ê²°ë¨ - ì‹¤ì œ êµ¬í˜„ì‹œ noVNC ìº”ë²„ìŠ¤ê°€ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤
                            </div>
                        </div>
                    </div>
                `;
            }

            stopVM() {
                if (!this.isConnected) {
                    return;
                }

                this.disconnect();
                this.setConnectionStatus('disconnected', 'ì—°ê²° ì•ˆë¨');
                this.updateVMStatus('ì¤‘ì§€ë¨');
                this.hideVNCViewer();
                this.stopPerformanceMonitoring();
            }

            restartVM() {
                if (this.isConnected) {
                    this.stopVM();
                    setTimeout(() => {
                        this.startVM();
                    }, 1000);
                }
            }

            disconnect() {
                if (this.rfb) {
                    this.rfb.disconnect();
                    this.rfb = null;
                }
                this.isConnected = false;
                this.isConnecting = false;
            }

            hideVNCViewer() {
                const container = document.getElementById('vnc-container');
                const toolbar = document.getElementById('toolbar');
                const canvas = document.getElementById('vnc-canvas');
                
                toolbar.style.display = 'none';
                canvas.style.display = 'none';
                
                // no-connection divê°€ ì—†ìœ¼ë©´ ìƒì„±
                let noConnection = document.getElementById('no-connection');
                if (!noConnection) {
                    noConnection = document.createElement('div');
                    noConnection.id = 'no-connection';
                    noConnection.className = 'no-connection';
                    container.appendChild(noConnection);
                }
                
                noConnection.style.display = 'block';
                noConnection.textContent = 'ê°€ìƒí™˜ê²½ì„ ì„ íƒí•˜ê³  ì‹œì‘ ë²„íŠ¼ì„ ëˆŒëŸ¬ì£¼ì„¸ìš”';
            }

            setConnectionStatus(status, text) {
                const indicator = document.getElementById('status-indicator');
                const connectionText = document.getElementById('connection-text');
                
                indicator.className = `status-indicator ${status}`;
                connectionText.textContent = text;
            }

            updateVMStatus(status) {
                document.getElementById('vm-status').textContent = status;
            }

            startPerformanceMonitoring() {
                this.performanceInterval = setInterval(() => {
                    this.updatePerformanceStats();
                }, 2000);
            }

            stopPerformanceMonitoring() {
                if (this.performanceInterval) {
                    clearInterval(this.performanceInterval);
                    this.performanceInterval = null;
                }
                
                // ì„±ëŠ¥ í†µê³„ ì´ˆê¸°í™”
                document.getElementById('cpu-usage').textContent = '0%';
                document.getElementById('memory-usage').textContent = '0%';
            }

            updatePerformanceStats() {
                if (this.isConnected) {
                    // ì‹¤ì œë¡œëŠ” ë°±ì—”ë“œì—ì„œ ì„±ëŠ¥ ë°ì´í„°ë¥¼ ê°€ì ¸ì˜´
                    const cpuUsage = Math.floor(Math.random() * 60) + 20;
                    const memoryUsage = Math.floor(Math.random() * 40) + 30;
                    
                    document.getElementById('cpu-usage').textContent = `${cpuUsage}%`;
                    document.getElementById('memory-usage').textContent = `${memoryUsage}%`;
                }
            }

            resizeVNCViewer() {
                if (this.rfb) {
                    this.rfb.autoscale = true;
                }
            }
        }
        // ExtendedSandboxPlatform í´ë˜ìŠ¤ ì •ì˜ ì¶”ê°€
        class ExtendedSandboxPlatform extends SandboxPlatform {
            constructor() {
                super();
                this.isRecording = false;
                this.clipboardModal = null;
                this.currentScale = 100;
            }
            
            // í™•ì¥ ê¸°ëŠ¥ë“¤ êµ¬í˜„
            showVNCViewer() {
                super.showVNCViewer();
                const noConnection = document.getElementById('no-connection');
                const toolbar = document.getElementById('toolbar');
                const canvas = document.getElementById('vnc-canvas');

                noConnection.style.display = 'none';
                toolbar.style.display = 'flex';
                canvas.style.display = 'block';
            }
        }

        class SecurityManager {
            constructor() {
                this.currentUser = null;
                this.sessionTimeout = 30 * 60 * 1000; // 30ë¶„
                this.maxLoginAttempts = 3;
                this.loginAttempts = 0;
                this.allowedIPs = [];
                this.auditLogs = [];
            }

            async getClientIP() {
                try {
                    const response = await fetch('/api/client-ip');
                    const data = await response.json();
                    return data.ip;
                } catch (error) {
                    return 'unknown';
                }
            }

            handleLoginFailure() {
                this.loginAttempts++;
                if (this.loginAttempts >= this.maxLoginAttempts) {
                    alert('ìµœëŒ€ ë¡œê·¸ì¸ ì‹œë„ íšŸìˆ˜ë¥¼ ì´ˆê³¼í–ˆìŠµë‹ˆë‹¤.');
                    window.location.href = '/blocked';
                }
            }

            logout(reason) {
                console.log(`ë¡œê·¸ì•„ì›ƒ: ${reason}`);
                this.currentUser = null;
                if (this.sessionTimer) {
                    clearTimeout(this.sessionTimer);
                }
                window.location.href = '/login';
            }

            // ì‚¬ìš©ì ì¸ì¦
            async authenticate(username, password, mfaCode = null) {
                try {
                    // IP ì£¼ì†Œ í™•ì¸
                    if (!this.checkIPWhitelist()) {
                        throw new Error('í—ˆìš©ë˜ì§€ ì•Šì€ IP ì£¼ì†Œì…ë‹ˆë‹¤');
                    }

                    const response = await fetch('/api/auth/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            username,
                            password,
                            mfaCode,
                            clientIP: await this.getClientIP()
                        })
                    });

                    if (response.ok) {
                        const userData = await response.json();
                        this.currentUser = userData;
                        this.startSessionTimeout();
                        this.logSecurityEvent('LOGIN_SUCCESS', { username });
                        return true;
                    } else {
                        this.handleLoginFailure();
                        return false;
                    }
                } catch (error) {
                    this.logSecurityEvent('LOGIN_ERROR', { error: error.message });
                    throw error;
                }
            }

            // ì„¸ì…˜ íƒ€ì„ì•„ì›ƒ ê´€ë¦¬
            startSessionTimeout() {
                if (this.sessionTimer) {
                    clearTimeout(this.sessionTimer);
                }
                
                this.sessionTimer = setTimeout(() => {
                    this.logout('SESSION_TIMEOUT');
                }, this.sessionTimeout);
            }

            // ê¶Œí•œ í™•ì¸
            checkPermission(action, vmId) {
                if (!this.currentUser) {
                    return false;
                }

                const userPermissions = this.currentUser.permissions || [];
                const vmPermissions = this.currentUser.vmAccess || [];

                return userPermissions.includes(action) && 
                    (vmPermissions.includes('*') || vmPermissions.includes(vmId));
            }

            // IP í™”ì´íŠ¸ë¦¬ìŠ¤íŠ¸ í™•ì¸
            checkIPWhitelist() {
                if (this.allowedIPs.length === 0) {
                    return true; // í™”ì´íŠ¸ë¦¬ìŠ¤íŠ¸ê°€ ë¹„ì–´ìˆìœ¼ë©´ ëª¨ë“  IP í—ˆìš©
                }
                
                // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” í´ë¼ì´ì–¸íŠ¸ IPë¥¼ ì •í™•íˆ ê°€ì ¸ì™€ì•¼ í•¨
                const clientIP = this.getClientIP();
                return this.allowedIPs.includes(clientIP);
            }

            // ë³´ì•ˆ ì´ë²¤íŠ¸ ë¡œê¹…
            logSecurityEvent(eventType, details) {
                const logEntry = {
                    timestamp: new Date().toISOString(),
                    eventType,
                    user: this.currentUser?.username || 'anonymous',
                    ip: this.getClientIP(),
                    details
                };
                
                this.auditLogs.push(logEntry);
                
                // ë°±ì—”ë“œë¡œ ë¡œê·¸ ì „ì†¡
                fetch('/api/security/log', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(logEntry)
                });
            }
        }

        // Web Crypto APIë¥¼ ì‚¬ìš©í•œ ì•”í˜¸í™” ë¼ì´ë¸ŒëŸ¬ë¦¬
        class SecureConnection {
            constructor() {
                this.sslEnabled = true;
                this.cryptoKey = null;
                this.algorithm = 'AES-GCM';
                this.keyLength = 256;
                this.ivLength = 12;
                this.tagLength = 128;
                this.isEncryptionReady = false;
                this.sessionKeys = new Map(); // ì„¸ì…˜ë³„ í‚¤ ì €ì¥
            }

            // ì•”í˜¸í™” í‚¤ ìƒì„± (Web Crypto API)
            async generateCryptoKey() {
                try {
                    this.cryptoKey = await window.crypto.subtle.generateKey(
                        {
                            name: this.algorithm,
                            length: this.keyLength
                        },
                        true, // extractable
                        ['encrypt', 'decrypt']
                    );
                    this.isEncryptionReady = true;
                    console.log('ì•”í˜¸í™” í‚¤ê°€ ì„±ê³µì ìœ¼ë¡œ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤.');
                    return this.cryptoKey;
                } catch (error) {
                    console.error('ì•”í˜¸í™” í‚¤ ìƒì„± ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // í‚¤ë¥¼ ArrayBufferë¡œ ë‚´ë³´ë‚´ê¸°
            async exportKey(key = this.cryptoKey) {
                try {
                    return await window.crypto.subtle.exportKey('raw', key);
                } catch (error) {
                    console.error('í‚¤ ë‚´ë³´ë‚´ê¸° ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ArrayBufferì—ì„œ í‚¤ ê°€ì ¸ì˜¤ê¸°
            async importKey(keyBuffer) {
                try {
                    const key = await window.crypto.subtle.importKey(
                        'raw',
                        keyBuffer,
                        { name: this.algorithm },
                        true,
                        ['encrypt', 'decrypt']
                    );
                    return key;
                } catch (error) {
                    console.error('í‚¤ ê°€ì ¸ì˜¤ê¸° ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ë°ì´í„° ì•”í˜¸í™”
            async encryptData(data, key = this.cryptoKey) {
                if (!key) {
                    throw new Error('ì•”í˜¸í™” í‚¤ê°€ ì„¤ì •ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                }

                try {
                    // ëœë¤ IV ìƒì„±
                    const iv = window.crypto.getRandomValues(new Uint8Array(this.ivLength));
                    
                    // ë¬¸ìì—´ì„ ArrayBufferë¡œ ë³€í™˜
                    const encoder = new TextEncoder();
                    const dataBuffer = typeof data === 'string' ? encoder.encode(data) : data;

                    // ë°ì´í„° ì•”í˜¸í™”
                    const encryptedBuffer = await window.crypto.subtle.encrypt(
                        {
                            name: this.algorithm,
                            iv: iv,
                            tagLength: this.tagLength
                        },
                        key,
                        dataBuffer
                    );

                    // IVì™€ ì•”í˜¸í™”ëœ ë°ì´í„°ë¥¼ ê²°í•©
                    const result = new Uint8Array(iv.length + encryptedBuffer.byteLength);
                    result.set(iv, 0);
                    result.set(new Uint8Array(encryptedBuffer), iv.length);

                    return result.buffer;
                } catch (error) {
                    console.error('ë°ì´í„° ì•”í˜¸í™” ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ë°ì´í„° ë³µí˜¸í™”
            async decryptData(encryptedData, key = this.cryptoKey) {
                if (!key) {
                    throw new Error('ë³µí˜¸í™” í‚¤ê°€ ì„¤ì •ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                }

                try {
                    const dataArray = new Uint8Array(encryptedData);
                    
                    // IVì™€ ì•”í˜¸í™”ëœ ë°ì´í„° ë¶„ë¦¬
                    const iv = dataArray.slice(0, this.ivLength);
                    const encrypted = dataArray.slice(this.ivLength);

                    // ë°ì´í„° ë³µí˜¸í™”
                    const decryptedBuffer = await window.crypto.subtle.decrypt(
                        {
                            name: this.algorithm,
                            iv: iv,
                            tagLength: this.tagLength
                        },
                        key,
                        encrypted
                    );

                    // ArrayBufferë¥¼ ë¬¸ìì—´ë¡œ ë³€í™˜
                    const decoder = new TextDecoder();
                    return decoder.decode(decryptedBuffer);
                } catch (error) {
                    console.error('ë°ì´í„° ë³µí˜¸í™” ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // í•´ì‹œ ìƒì„± (SHA-256)
            async generateHash(data) {
                try {
                    const encoder = new TextEncoder();
                    const dataBuffer = typeof data === 'string' ? encoder.encode(data) : data;
                    
                    const hashBuffer = await window.crypto.subtle.digest('SHA-256', dataBuffer);
                    
                    // ArrayBufferë¥¼ hex ë¬¸ìì—´ë¡œ ë³€í™˜
                    const hashArray = Array.from(new Uint8Array(hashBuffer));
                    return hashArray.map(b => b.toString(16).padStart(2, '0')).join('');
                } catch (error) {
                    console.error('í•´ì‹œ ìƒì„± ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ë””ì§€í„¸ ì„œëª…ì„ ìœ„í•œ í‚¤ ìŒ ìƒì„±
            async generateSigningKeyPair() {
                try {
                    const keyPair = await window.crypto.subtle.generateKey(
                        {
                            name: 'ECDSA',
                            namedCurve: 'P-256'
                        },
                        true,
                        ['sign', 'verify']
                    );
                    
                    return keyPair;
                } catch (error) {
                    console.error('ì„œëª… í‚¤ ìŒ ìƒì„± ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ë°ì´í„° ì„œëª…
            async signData(data, privateKey) {
                try {
                    const encoder = new TextEncoder();
                    const dataBuffer = typeof data === 'string' ? encoder.encode(data) : data;
                    
                    const signature = await window.crypto.subtle.sign(
                        {
                            name: 'ECDSA',
                            hash: 'SHA-256'
                        },
                        privateKey,
                        dataBuffer
                    );
                    
                    return signature;
                } catch (error) {
                    console.error('ë°ì´í„° ì„œëª… ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ì„œëª… ê²€ì¦
            async verifySignature(data, signature, publicKey) {
                try {
                    const encoder = new TextEncoder();
                    const dataBuffer = typeof data === 'string' ? encoder.encode(data) : data;
                    
                    const isValid = await window.crypto.subtle.verify(
                        {
                            name: 'ECDSA',
                            hash: 'SHA-256'
                        },
                        publicKey,
                        signature,
                        dataBuffer
                    );
                    
                    return isValid;
                } catch (error) {
                    console.error('ì„œëª… ê²€ì¦ ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ë³´ì•ˆ ë¹„ë°€ë²ˆí˜¸ ìƒì„±
            generateSecurePassword(length = 16) {
                const charset = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*';
                const randomValues = new Uint8Array(length);
                window.crypto.getRandomValues(randomValues);
                
                return Array.from(randomValues, byte => charset[byte % charset.length]).join('');
            }

            // SSL/TLS ì—°ê²° ì„¤ì •
            async setupSecureConnection(vmConfig) {
                // ì•”í˜¸í™” í‚¤ê°€ ì—†ìœ¼ë©´ ìƒì„±
                if (!this.cryptoKey) {
                    await this.generateCryptoKey();
                }

                const protocol = this.sslEnabled ? 'wss:' : 'ws:';
                const wsUrl = `${protocol}//${vmConfig.host}:${vmConfig.securePort}/websockify`;
                
                // ì„¸ì…˜ í‚¤ ìƒì„± ë° ì €ì¥
                const sessionKey = await this.generateCryptoKey();
                const sessionId = await this.generateHash(Date.now().toString());
                this.sessionKeys.set(sessionId, sessionKey);
                
                return {
                    ...vmConfig,
                    wsUrl,
                    encrypt: true,
                    sessionId,
                    credentials: {
                        password: this.generateSecurePassword()
                    }
                };
            }

            // ì„¸ì…˜ë³„ ë°ì´í„° ì•”í˜¸í™”
            async encryptSessionData(data, sessionId) {
                const sessionKey = this.sessionKeys.get(sessionId);
                if (!sessionKey) {
                    throw new Error('ì„¸ì…˜ í‚¤ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                }
                
                return await this.encryptData(data, sessionKey);
            }

            // ì„¸ì…˜ë³„ ë°ì´í„° ë³µí˜¸í™”
            async decryptSessionData(encryptedData, sessionId) {
                const sessionKey = this.sessionKeys.get(sessionId);
                if (!sessionKey) {
                    throw new Error('ì„¸ì…˜ í‚¤ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.');
                }
                
                return await this.decryptData(encryptedData, sessionKey);
            }

            // ì„¸ì…˜ í‚¤ ì •ë¦¬
            clearSessionKey(sessionId) {
                this.sessionKeys.delete(sessionId);
            }

            // ëª¨ë“  ì„¸ì…˜ í‚¤ ì •ë¦¬
            clearAllSessionKeys() {
                this.sessionKeys.clear();
            }
        }

        class SecureSandboxPlatform extends ExtendedSandboxPlatform {
            constructor() {
                super();
                this.securityManager = new SecurityManager();
                this.secureConnection = new SecureConnection();
                this.currentSessionId = null;
                this.initSecurity();
            }

            async initSecurity() {
                // Web Crypto API ì§€ì› í™•ì¸
                if (!window.crypto || !window.crypto.subtle) {
                    console.error('Web Crypto APIê°€ ì§€ì›ë˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                    alert('ì´ ë¸Œë¼ìš°ì €ëŠ” í•„ìš”í•œ ë³´ì•ˆ ê¸°ëŠ¥ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                    return;
                }

                // ì•”í˜¸í™” í‚¤ ì´ˆê¸°í™”
                try {
                    await this.secureConnection.generateCryptoKey();
                    console.log('ë³´ì•ˆ ëª¨ë“ˆì´ ì„±ê³µì ìœ¼ë¡œ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.');
                } catch (error) {
                    console.error('ë³´ì•ˆ ëª¨ë“ˆ ì´ˆê¸°í™” ì‹¤íŒ¨:', error);
                }

                // í˜ì´ì§€ ë¡œë“œ ì‹œ ì¸ì¦ í™•ì¸
                this.checkAuthentication();
                
                // í‚¤ë³´ë“œ ì´ë²¤íŠ¸ ë³´ì•ˆ í•„í„°ë§
                this.setupSecurityFilters();
                
                // ì •ê¸°ì ì¸ ë³´ì•ˆ ì ê²€
                setInterval(() => {
                    this.performSecurityCheck();
                }, 60000); // 1ë¶„ë§ˆë‹¤
            }

            async checkAuthentication() {
                const token = this.getAuthToken();
                if (!token) {
                    return false;
                }

                try {
                    // í† í° í•´ì‹œ ìƒì„±ìœ¼ë¡œ ë¬´ê²°ì„± í™•ì¸
                    const tokenHash = await this.secureConnection.generateHash(token);
                    
                    const response = await fetch('/api/auth/verify', {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer ${token}`,
                            'Content-Type': 'application/json',
                            'X-Token-Hash': tokenHash
                        }
                    });
                    
                    return response.ok;
                } catch (error) {
                    console.error('ì¸ì¦ í™•ì¸ ì‹¤íŒ¨:', error);
                    return false;
                }
            }

            getAuthToken() {
                // í† í°ì„ ì•ˆì „í•˜ê²Œ ì €ì¥í•˜ê³  ê°€ì ¸ì˜¤ëŠ” ë¡œì§
                // localStorage ëŒ€ì‹  ë©”ëª¨ë¦¬ë‚˜ secure httpOnly ì¿ í‚¤ ì‚¬ìš© ê¶Œì¥
                return sessionStorage.getItem('authToken');
            }

            setupSecurityFilters() {
                // í‚¤ë³´ë“œ ì´ë²¤íŠ¸ í•„í„°ë§ êµ¬í˜„
                document.addEventListener('keydown', (event) => {
                    // ìœ„í—˜í•œ í‚¤ ì¡°í•© ì°¨ë‹¨ (ì˜ˆ: F12, Ctrl+Shift+I ë“±)
                    if (event.key === 'F12' || 
                        (event.ctrlKey && event.shiftKey && event.key === 'I')) {
                        event.preventDefault();
                        console.log('ê°œë°œì ë„êµ¬ ì ‘ê·¼ì´ ì°¨ë‹¨ë˜ì—ˆìŠµë‹ˆë‹¤.');
                        this.securityManager.logSecurityEvent('DEV_TOOLS_BLOCKED', {
                            key: event.key,
                            timestamp: Date.now()
                        });
                    }
                });

                // ìš°í´ë¦­ ë°©ì§€
                document.addEventListener('contextmenu', (event) => {
                    event.preventDefault();
                });
            }

            performSecurityCheck() {
                // ì„¸ì…˜ ìœ íš¨ì„± ê²€ì‚¬
                if (!this.securityManager.currentUser) {
                    this.redirectToLogin();
                    return;
                }

                // ë¹„ì •ìƒì ì¸ í™œë™ ê°ì§€
                this.detectSuspiciousActivity();
            }

            redirectToLogin() {
                // ì„¸ì…˜ í‚¤ ì •ë¦¬
                if (this.currentSessionId) {
                    this.secureConnection.clearSessionKey(this.currentSessionId);
                }
                window.location.href = '/login';
            }

            detectSuspiciousActivity() {
                // ì˜ì‹¬ìŠ¤ëŸ¬ìš´ í™œë™ ê°ì§€ ë¡œì§
                // ì˜ˆ: ë¹„ì •ìƒì ì¸ API í˜¸ì¶œ íŒ¨í„´, ê³¼ë„í•œ ìš”ì²­ ë“±
                const suspiciousPatterns = [
                    // ì§§ì€ ì‹œê°„ ë‚´ ê³¼ë„í•œ ìš”ì²­
                    { type: 'EXCESSIVE_REQUESTS', threshold: 100, timeWindow: 60000 },
                    // ë¹„ì •ìƒì ì¸ í‚¤ ì…ë ¥ íŒ¨í„´
                    { type: 'ABNORMAL_KEYSTROKES', threshold: 1000, timeWindow: 10000 }
                ];

                // íŒ¨í„´ ê°ì§€ ë¡œì§ êµ¬í˜„
                // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” ë” ì •êµí•œ ì•Œê³ ë¦¬ì¦˜ í•„ìš”
            }

            async startVM() {
                // ê¶Œí•œ í™•ì¸
                if (!this.securityManager.checkPermission('START_VM', this.currentVM)) {
                    alert('ê°€ìƒë¨¸ì‹  ì‹œì‘ ê¶Œí•œì´ ì—†ìŠµë‹ˆë‹¤.');
                    return;
                }

                try {
                    // ë³´ì•ˆ ì—°ê²° ì„¤ì •
                    const secureConfig = await this.secureConnection.setupSecureConnection(this.vmConfig);
                    this.currentSessionId = secureConfig.sessionId;

                    // ë³´ì•ˆ ì´ë²¤íŠ¸ ë¡œê¹…
                    this.securityManager.logSecurityEvent('VM_START_ATTEMPT', {
                        vmId: this.currentVM,
                        sessionId: this.currentSessionId,
                        timestamp: Date.now()
                    });

                    // VM ì‹œì‘ ì‹œ ë°ì´í„° ì•”í˜¸í™”
                    const startupData = JSON.stringify({
                        vmId: this.currentVM,
                        config: secureConfig,
                        timestamp: Date.now()
                    });

                    const encryptedStartupData = await this.secureConnection.encryptSessionData(
                        startupData, 
                        this.currentSessionId
                    );

                    console.log('VM ì‹œì‘ ë°ì´í„°ê°€ ì•”í˜¸í™”ë˜ì—ˆìŠµë‹ˆë‹¤.');

                    await super.startVM();
                } catch (error) {
                    console.error('ë³´ì•ˆ VM ì‹œì‘ ì‹¤íŒ¨:', error);
                    this.securityManager.logSecurityEvent('VM_START_ERROR', {
                        error: error.message,
                        vmId: this.currentVM
                    });
                }
            }

            // ì•ˆì „í•œ ë°ì´í„° ì „ì†¡
            async sendSecureData(data) {
                if (!this.currentSessionId) {
                    throw new Error('ë³´ì•ˆ ì„¸ì…˜ì´ ì„¤ì •ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                }

                try {
                    const encryptedData = await this.secureConnection.encryptSessionData(
                        JSON.stringify(data), 
                        this.currentSessionId
                    );
                    
                    // Base64ë¡œ ì¸ì½”ë”©í•˜ì—¬ ì „ì†¡
                    const base64Data = btoa(String.fromCharCode(...new Uint8Array(encryptedData)));
                    
                    return base64Data;
                } catch (error) {
                    console.error('ë°ì´í„° ì•”í˜¸í™” ì‹¤íŒ¨:', error);
                    throw error;
                }
            }

            // ì•”í˜¸í™”ëœ ë°ì´í„° ìˆ˜ì‹ 
            async receiveSecureData(base64Data) {
                if (!this.currentSessionId) {
                    throw new Error('ë³´ì•ˆ ì„¸ì…˜ì´ ì„¤ì •ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                }

                try {
                    // Base64 ë””ì½”ë”©
                    const binaryString = atob(base64Data);
                    const encryptedData = new Uint8Array(binaryString.length);
                    for (let i = 0; i < binaryString.length; i++) {
                        encryptedData[i] = binaryString.charCodeAt(i);
                    }

                    const decryptedData = await this.secureConnection.decryptSessionData(
                        encryptedData.buffer, 
                        this.currentSessionId
                    );
                    
                    return JSON.parse(decryptedData);
                } catch (error) {
                    console.error('ë°ì´í„° ë³µí˜¸í™” ì‹¤íŒ¨:', error);
                    throw error;
                }
            }
        }



        // íˆ´ë°” ê¸°ëŠ¥ë“¤
        function sendCtrlAltDel() {
            if (platform.rfb && platform.isConnected) {
                platform.rfb.sendCtrlAltDel();
            }
        }

        function toggleFullscreen() {
            const container = document.getElementById('vnc-container');
            if (document.fullscreenElement) {
                document.exitFullscreen();
            } else {
                container.requestFullscreen();
            }
        }

        async function takeScreenshot() {
            if (platform.rfb && platform.isConnected) {
                try {
                    const canvas = document.getElementById('vnc-canvas');
                    const dataUrl = canvas.toDataURL();
                    
                    // ìŠ¤í¬ë¦°ìƒ· ë°ì´í„°ë¥¼ ì•”í˜¸í™”
                    const encryptedScreenshot = await platform.sendSecureData({
                        type: 'screenshot',
                        data: dataUrl,
                        timestamp: Date.now()
                    });
                    
                    // ë³´ì•ˆ ë¡œê·¸ ê¸°ë¡
                    platform.securityManager.logSecurityEvent('SCREENSHOT_TAKEN', {
                        vmId: platform.currentVM,
                        encrypted: true
                    });
                    
                    const link = document.createElement('a');
                    link.download = `screenshot-${new Date().getTime()}.png`;
                    link.href = dataUrl;
                    link.click();
                } catch (error) {
                    console.error('ë³´ì•ˆ ìŠ¤í¬ë¦°ìƒ· ì‹¤íŒ¨:', error);
                }
            }
        }

        // í”Œë«í¼ ì´ˆê¸°í™”
        // ë³´ì•ˆ ê¸°ëŠ¥ì´ í¬í•¨ëœ í”Œë«í¼ìœ¼ë¡œ ë³€ê²½
        const platform = new SecureSandboxPlatform();

        // ì´ˆê¸°í™” ì‹œ ì¸ì¦ í™•ì¸
        document.addEventListener('DOMContentLoaded', async () => {
            console.log('ì›¹ ê¸°ë°˜ ë³´ì•ˆ ìƒŒë“œë°•ìŠ¤ í”Œë«í¼ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.');
            
            // Web Crypto API ì§€ì› í™•ì¸
            if (!window.crypto || !window.crypto.subtle) {
                alert('ì´ ë¸Œë¼ìš°ì €ëŠ” í•„ìš”í•œ ë³´ì•ˆ ê¸°ëŠ¥ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤. ìµœì‹  ë¸Œë¼ìš°ì €ë¥¼ ì‚¬ìš©í•´ì£¼ì„¸ìš”.');
                return;
            }
            
            // ì¸ì¦ ìƒíƒœ í™•ì¸
            if (currentConfig.apiBaseUrl !== 'http://localhost:3000') {
                if (!await platform.checkAuthentication()) {
                    window.location.href = '/login';
                    return;
                }
            }

            console.log('ë³´ì•ˆ ì´ˆê¸°í™”ê°€ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.');
        });
    </script>
</body>
</html>

    <script>
        // í™˜ê²½ë³„ ì„¤ì •
        const CONFIG = {
            development: {
                wsProtocol: 'ws:',
                apiBaseUrl: 'http://localhost:3000',
                vncHost: 'localhost'
            },
            production: {
                wsProtocol: 'wss:',
                apiBaseUrl: 'https://your-domain.com',
                vncHost: 'your-vnc-server.com'
            }
        };

        const currentConfig = CONFIG[window.ENV?.NODE_ENV || 'development'];

        // ìˆ˜ì •ëœ í”Œë«í¼ í´ë˜ìŠ¤
        class SandboxPlatform {
            constructor() {
                this.currentVM = null;
                this.vncWebSocket = null;
                this.isConnected = false;
                this.isConnecting = false;
                this.isRestarting = false;
                this.performanceInterval = null;
                this.config = currentConfig;
                this.authToken = sessionStorage.getItem('authToken');
                
                this.vmConfigs = {
                    'ubuntu-desktop': {
                        name: 'Ubuntu Desktop 20.04',
                        memory: '4GB',
                        cpu: '2 cores',
                        disk: '25GB',
                        host: 'localhost',
                        port: 6080,
                        vncPort: 5901,
                        password: '',
                        path: '/websockify'
                    },
                };

                this.initEventListeners();
                this.updatePerformanceStats();
            }

            initEventListeners() {
                // VM ì„ íƒ ì´ë²¤íŠ¸
                document.querySelectorAll('.vm-item').forEach(item => {
                    item.addEventListener('click', (e) => {
                        this.selectVM(e.target.dataset.vm);
                    });
                });

                // ì»¨íŠ¸ë¡¤ ë²„íŠ¼ ì´ë²¤íŠ¸
                document.getElementById('start-btn').addEventListener('click', () => {
                    this.startVM();
                });

                document.getElementById('stop-btn').addEventListener('click', () => {
                    this.stopVM();
                });

                document.getElementById('restart-btn').addEventListener('click', () => {
                    this.restartVM();
                });

                // ì°½ í¬ê¸° ë³€ê²½ ì´ë²¤íŠ¸
                window.addEventListener('resize', () => {
                    this.resizeVNCViewer();
                });
            }

            selectVM(vmId) {
                // ì´ì „ ì„ íƒ í•´ì œ
                document.querySelectorAll('.vm-item').forEach(item => {
                    item.classList.remove('active');
                });

                // ìƒˆë¡œìš´ VM ì„ íƒ
                document.querySelector(`[data-vm="${vmId}"]`).classList.add('active');
                this.currentVM = vmId;

                // VM ì •ë³´ ì—…ë°ì´íŠ¸
                this.updateVMInfo(vmId);
                
                // ë·°ì–´ ì œëª© ì—…ë°ì´íŠ¸
                document.getElementById('viewer-title').textContent = this.vmConfigs[vmId].name;

                // ì—°ê²°ì´ ìˆë‹¤ë©´ ëŠê¸°
                if (this.isConnected) {
                    this.disconnect();
                }
            }

            updateVMInfo(vmId) {
                const config = this.vmConfigs[vmId];
                const vmInfo = document.getElementById('vm-info');
                
                document.getElementById('vm-memory').textContent = config.memory;
                document.getElementById('vm-cpu').textContent = config.cpu;
                document.getElementById('vm-disk').textContent = config.disk;
                
                vmInfo.style.display = 'block';
            }

            async startVM() {
                if (!this.currentVM) {
                    alert('ë¨¼ì € ê°€ìƒí™˜ê²½ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
                    return;
                }

                if (this.isConnecting || this.isRestarting) {
                    return;
                }

                try {
                    this.isConnecting = true;
                    this.updateControlButtons();
                    this.setConnectionStatus('connecting', 'ì—°ê²° ì¤‘...');
                    
                    // ì‹¤ì œ VM ì‹œì‘ ì‹œë®¬ë ˆì´ì…˜
                    await this.simulateVMStart();
                    
                    // VNC ì—°ê²° ì‹œë®¬ë ˆì´ì…˜
                    await this.simulateVNCConnection();
                    
                    this.setConnectionStatus('connected', 'ì—°ê²°ë¨');
                    this.updateVMStatus('ì‹¤í–‰ ì¤‘');
                    this.showVNCViewer();
                    this.startPerformanceMonitoring();
                    
                } catch (error) {
                    console.error('VM ì‹œì‘ ì‹¤íŒ¨:', error);
                    this.setConnectionStatus('disconnected', 'ì—°ê²° ì‹¤íŒ¨');
                    alert('ê°€ìƒí™˜ê²½ ì‹œì‘ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤: ' + error.message);
                } finally {
                    this.isConnecting = false;
                    this.updateControlButtons();
                }
            }

            async simulateVMStart() {
                return new Promise((resolve) => {
                    setTimeout(() => {
                        resolve();
                    }, 3000);
                });
            }

            async simulateVNCConnection() {
                return new Promise((resolve) => {
                    setTimeout(() => {
                        this.isConnected = true;
                        resolve();
                    }, 2000);
                });
            }

            showVNCViewer() {
                const container = document.getElementById('vnc-container');
                const noConnection = document.getElementById('no-connection');
                const toolbar = document.getElementById('toolbar');
                const canvas = document.getElementById('vnc-canvas');

                // no-connection ìˆ¨ê¹€
                if (noConnection) {
                    noConnection.style.display = 'none';
                }
                
                // íˆ´ë°” í‘œì‹œ (ëª…ì‹œì ìœ¼ë¡œ)
                toolbar.style.display = 'flex';
                toolbar.classList.remove('hidden');
                
                // ìº”ë²„ìŠ¤ í‘œì‹œ
                if (canvas) {
                    canvas.style.display = 'block';
                }
                
                // ì‹¤ì œ VNC í™”ë©´ ì‹œë®¬ë ˆì´ì…˜
                container.innerHTML = `
                    <div style="width: 100%; height: 100%; background: linear-gradient(45deg, #1e3c72, #2a5298); 
                                display: flex; align-items: center; justify-content: center; 
                                border-radius: 10px; color: white; font-size: 1.2rem;">
                        <div style="text-align: center;">
                            <div style="font-size: 3rem; margin-bottom: 1rem;">ğŸ–¥ï¸</div>
                            <div>${this.vmConfigs[this.currentVM].name}</div>
                            <div style="font-size: 0.9rem; margin-top: 0.5rem; opacity: 0.8;">
                                VNC ì—°ê²°ë¨ - ì‹¤ì œ êµ¬í˜„ì‹œ noVNC ìº”ë²„ìŠ¤ê°€ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤
                            </div>
                        </div>
                    </div>
                `;
            }

            stopVM() {
                if (!this.isConnected && !this.isConnecting && !this.isRestarting) {
                    return;
                }

                try {
                    // ì—°ê²° ìƒíƒœ ì´ˆê¸°í™”
                    this.disconnect();
                    this.isConnecting = false;
                    this.isRestarting = false;
                    
                    // UI ìƒíƒœ ì—…ë°ì´íŠ¸
                    this.setConnectionStatus('disconnected', 'ì—°ê²° ì•ˆë¨');
                    this.updateVMStatus('ì¤‘ì§€ë¨');
                    this.hideVNCViewer();
                    this.stopPerformanceMonitoring();
                    
                    // ë²„íŠ¼ ìƒíƒœ ì—…ë°ì´íŠ¸ (ì¤‘ìš”!)
                    this.updateControlButtons();
                    
                } catch (error) {
                    console.error('VM ì¤‘ì§€ ì‹¤íŒ¨:', error);
                } finally {
                    // í™•ì‹¤íˆ ìƒíƒœ ì´ˆê¸°í™”
                    this.isConnecting = false;
                    this.isRestarting = false;
                    this.updateControlButtons();
                }
            }

            async restartVM() {
                if (!this.currentVM) {
                    alert('ë¨¼ì € ê°€ìƒí™˜ê²½ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
                    return;
                }

                if (this.isRestarting || this.isConnecting) {
                    return;
                }

                try {
                    this.isRestarting = true;
                    this.updateControlButtons();
                    this.setConnectionStatus('restarting', 'ì¬ì‹œì‘ ì¤‘...');
                    this.updateVMStatus('ì¬ì‹œì‘ ì¤‘');

                    // ì—°ê²°ëœ ìƒíƒœë¼ë©´ ë¨¼ì € ì—°ê²° í•´ì œ
                    if (this.isConnected) {
                        this.disconnect();
                        // ì—°ê²° í•´ì œ ëŒ€ê¸°
                        await new Promise(resolve => setTimeout(resolve, 1000));
                    }

                    // VM ì¬ì‹œì‘ ì‹œë®¬ë ˆì´ì…˜ (ì¤‘ì§€ + ì‹œì‘)
                    await this.simulateVMRestart();
                    
                    // VNC ì¬ì—°ê²°
                    await this.simulateVNCConnection();
                    
                    this.setConnectionStatus('connected', 'ì—°ê²°ë¨');
                    this.updateVMStatus('ì‹¤í–‰ ì¤‘');
                    this.showVNCViewer();
                    this.startPerformanceMonitoring();
                    
                } catch (error) {
                    console.error('VM ì¬ì‹œì‘ ì‹¤íŒ¨:', error);
                    this.setConnectionStatus('disconnected', 'ì¬ì‹œì‘ ì‹¤íŒ¨');
                    this.updateVMStatus('ì¤‘ì§€ë¨');
                    this.hideVNCViewer();
                    alert('ê°€ìƒí™˜ê²½ ì¬ì‹œì‘ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤: ' + error.message);
                } finally {
                    this.isRestarting = false;
                    this.updateControlButtons();
                }
            }

            async simulateVMRestart() {
                return new Promise((resolve) => {
                    // ì¬ì‹œì‘ì€ ì‹œì‘ë³´ë‹¤ ì¡°ê¸ˆ ë” ì˜¤ë˜ ê±¸ë¦¼
                    setTimeout(() => {
                        resolve();
                    }, 4000);
                });
            }

            disconnect() {
                if (this.rfb) {
                    this.rfb.disconnect();
                    this.rfb = null;
                }
                this.isConnected = false;
            }

            hideVNCViewer() {
                const container = document.getElementById('vnc-container');

                // ì»¨í…Œì´ë„ˆ ë‚´ìš© ì´ˆê¸°í™” ë° no-connection ë©”ì‹œì§€ í‘œì‹œ
                container.innerHTML = `
                    <div class="no-connection" id="no-connection">
                        ê°€ìƒí™˜ê²½ì„ ì„ íƒí•˜ê³  ì‹œì‘ ë²„íŠ¼ì„ ëˆŒëŸ¬ì£¼ì„¸ìš”
                    </div>
                `;
            }

            setConnectionStatus(status, text) {
                const indicator = document.getElementById('status-indicator');
                const connectionText = document.getElementById('connection-text');
                
                // ê¸°ì¡´ í´ë˜ìŠ¤ ì œê±°
                indicator.className = 'status-indicator';
                // ìƒˆë¡œìš´ ìƒíƒœ í´ë˜ìŠ¤ ì¶”ê°€
                indicator.classList.add(status);
                connectionText.textContent = text;
            }

            updateVMStatus(status) {
                document.getElementById('vm-status').textContent = status;
            }

            updateControlButtons() {
                const startBtn = document.getElementById('start-btn');
                const stopBtn = document.getElementById('stop-btn');
                const restartBtn = document.getElementById('restart-btn');

                if (this.isConnecting) {
                    // ì—°ê²° ì¤‘ ìƒíƒœ
                    startBtn.disabled = true;
                    stopBtn.disabled = false;
                    restartBtn.disabled = true;
                    startBtn.textContent = 'ğŸ”„ ì—°ê²° ì¤‘...';
                    stopBtn.textContent = 'â¹ï¸ ì¤‘ì§€';
                    restartBtn.textContent = 'ğŸ”„ ì¬ì‹œì‘';
                } else if (this.isRestarting) {
                    // ì¬ì‹œì‘ ì¤‘ ìƒíƒœ
                    startBtn.disabled = true;
                    stopBtn.disabled = true;
                    restartBtn.disabled = true;
                    startBtn.textContent = 'ğŸš€ ì‹œì‘';
                    stopBtn.textContent = 'â¹ï¸ ì¤‘ì§€';
                    restartBtn.textContent = 'ğŸ”„ ì¬ì‹œì‘ ì¤‘...';
                } else if (this.isConnected) {
                    // ì—°ê²°ë¨ ìƒíƒœ
                    startBtn.disabled = true;
                    stopBtn.disabled = false;
                    restartBtn.disabled = false;
                    startBtn.textContent = 'ğŸš€ ì‹œì‘';
                    stopBtn.textContent = 'â¹ï¸ ì¤‘ì§€';
                    restartBtn.textContent = 'ğŸ”„ ì¬ì‹œì‘';
                } else {
                    // ì¤‘ì§€ë¨/ì—°ê²° ì•ˆë¨ ìƒíƒœ
                    startBtn.disabled = false;
                    stopBtn.disabled = true;
                    restartBtn.disabled = true;
                    startBtn.textContent = 'ğŸš€ ì‹œì‘';
                    stopBtn.textContent = 'â¹ï¸ ì¤‘ì§€';
                    restartBtn.textContent = 'ğŸ”„ ì¬ì‹œì‘';
                }
            }

            startPerformanceMonitoring() {
                this.performanceInterval = setInterval(() => {
                    this.updatePerformanceStats();
                }, 2000);
            }

            stopPerformanceMonitoring() {
                if (this.performanceInterval) {
                    clearInterval(this.performanceInterval);
                    this.performanceInterval = null;
                }
                
                // ì„±ëŠ¥ í†µê³„ ì´ˆê¸°í™”
                document.getElementById('cpu-usage').textContent = '0%';
                document.getElementById('memory-usage').textContent = '0%';
            }

            updatePerformanceStats() {
                if (this.isConnected) {
                    // ì‹¤ì œë¡œëŠ” ë°±ì—”ë“œì—ì„œ ì„±ëŠ¥ ë°ì´í„°ë¥¼ ê°€ì ¸ì˜´
                    const cpuUsage = Math.floor(Math.random() * 60) + 20;
                    const memoryUsage = Math.floor(Math.random() * 40) + 30;
                    
                    document.getElementById('cpu-usage').textContent = `${cpuUsage}%`;
                    document.getElementById('memory-usage').textContent = `${memoryUsage}%`;
                }
            }

            resizeVNCViewer() {
                if (this.rfb) {
                    this.rfb.autoscale = true;
                }
            }
        }

        // ê¸°íƒ€ íˆ´ë°” í•¨ìˆ˜ë“¤
        function toggleFullscreen() {
            const container = document.getElementById('vnc-container');
            if (document.fullscreenElement) {
                document.exitFullscreen();
            } else {
                container.requestFullscreen().catch(error => {
                    console.error('ì „ì²´í™”ë©´ ì „í™˜ ì‹¤íŒ¨:', error);
                });
            }
        }

        function takeScreenshot() {
            if (!window.platform || !window.platform.isConnected) {
                alert('VMì— ì—°ê²°ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤.');
                return;
            }

            try {
                // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” VNC ìº”ë²„ìŠ¤ì—ì„œ ìŠ¤í¬ë¦°ìƒ· ìƒì„±
                console.log('ìŠ¤í¬ë¦°ìƒ· ì´¬ì˜ ì‹œë®¬ë ˆì´ì…˜');
                alert('ìŠ¤í¬ë¦°ìƒ·ì´ ì´¬ì˜ë˜ì—ˆìŠµë‹ˆë‹¤. (ì‹œë®¬ë ˆì´ì…˜)');
            } catch (error) {
                console.error('ìŠ¤í¬ë¦°ìƒ· ì‹¤íŒ¨:', error);
                alert('ìŠ¤í¬ë¦°ìƒ· ìƒì„±ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
            }
        }

        // í”Œë«í¼ ì´ˆê¸°í™”
        window.platform = new SandboxPlatform();

        // í˜ì´ì§€ ë¡œë“œ ì™„ë£Œ í›„ ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', () => {
            console.log('ì›¹ ê¸°ë°˜ ìƒŒë“œë°•ìŠ¤ í”Œë«í¼ì´ ì´ˆê¸°í™”ë˜ì—ˆìŠµë‹ˆë‹¤.');
            
            // ì´ˆê¸° ë²„íŠ¼ ìƒíƒœ ì„¤ì •
            window.platform.updateControlButtons();
